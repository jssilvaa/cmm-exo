<?xml version="1.0"?>
<robot name="single_leg_3r_floating">

  <!-- 
       root is pelvis, this is the floating base, 
       x forward, z up, y out of sagittal plane.
  -->
  <link name="pelvis_link">
    <inertial>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <mass value="25.0"/>
      <inertia ixx="0.20" ixy="0.0" ixz="0.0"
               iyy="0.35" iyz="0.0"
               izz="0.20"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <geometry>
        <box size="0.10 0.12 0.30"/>
      </geometry>
      <material name="red">
        <color rgba="0.9 0.2 0.2 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <geometry>
        <box size="0.20 0.12 0.30"/>
      </geometry>
    </collision>
  </link>

  <!-- 
       Thigh (hip -> knee)
  -->
  <link name="thigh_link">
    <inertial>
      <origin xyz="0 0 -0.225" rpy="0 0 0"/>
      <mass value="7.0"/>
      <inertia ixx="0.12" ixy="0.0" ixz="0.0"
               iyy="0.12" iyz="0.0"
               izz="0.01"/>
    </inertial>

    <visual>
      <origin xyz="0 0 -0.225" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.040" length="0.45"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.3 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -0.225" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.040" length="0.45"/>
      </geometry>
    </collision>
  </link>

  <!-- Hip pitch: pelvis -> thigh -->
  <joint name="hip_pitch" type="revolute">
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
    <parent link="pelvis_link"/>
    <child link="thigh_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="250" velocity="10.0"/>
    <dynamics damping="0.3" friction="0.0"/>
  </joint>

  <!-- 
       Shank (knee -> ankle)
  -->
  <link name="shank_link">
    <inertial>
      <origin xyz="0 0 -0.225" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.085" ixy="0.0" ixz="0.0"
               iyy="0.085" iyz="0.0"
               izz="0.008"/>
    </inertial>

    <visual>
      <origin xyz="0 0 -0.225" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.45"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.3 0.9 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -0.225" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.45"/>
      </geometry>
    </collision>
  </link>

  <!-- Knee pitch: thigh -> shank -->
  <joint name="knee_pitch" type="revolute">
    <origin xyz="0 0 -0.45" rpy="0 0 0"/>
    <parent link="thigh_link"/>
    <child link="shank_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-.8" upper=".8" effort="250" velocity="10.0"/>
    <dynamics damping="0.3" friction="0.0"/>
  </joint>

  <!-- 
       Foot slab (ankle -> sole)
   -->
  <link name="foot_link">
    <inertial>
      <origin xyz="0 0 -0.015" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.0020" ixy="0.0" ixz="0.0"
               iyy="0.0040" iyz="0.0"
               izz="0.0020"/>
    </inertial>

    <visual>
      <origin xyz="0.04 0 -0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.24 0.08 0.03"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.04 0 -0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.24 0.08 0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- Ankle pitch: shank -> foot -->
  <joint name="ankle_pitch" type="revolute">
    <origin xyz="0 0 -0.45" rpy="0 0 0"/>
    <parent link="shank_link"/>
    <child link="foot_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.2" upper="0.8" effort="150" velocity="8.0"/>
    <dynamics damping="0.2" friction="0.0"/>
  </joint>

  <!-- 
       Contact point frames (heel/toe) as fixed child links of foot_link
       these will form the minimal contact points in Pinocchio
       which are usedd for ground contact modeling.
   -->

  <link name="heel_contact">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1e-6"/>
      <inertia ixx="1e-9" ixy="0" ixz="0"
               iyy="1e-9" iyz="0"
               izz="1e-9"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><sphere radius="0.01"/></geometry>
      <material name="yellow"><color rgba="0.9 0.9 0.2 1.0"/></material>
    </visual>
  </link>

  <joint name="heel_contact_fixed" type="fixed">
    <parent link="foot_link"/>
    <child link="heel_contact"/>
    <!-- heel at x=-L/2, sole at z=-0.03 in foot frame -->
    <origin xyz="-0.08 0 -0.03" rpy="0 0 0"/>
  </joint>

  <link name="toe_contact">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1e-6"/>
      <inertia ixx="1e-9" ixy="0" ixz="0"
               iyy="1e-9" iyz="0"
               izz="1e-9"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><sphere radius="0.01"/></geometry>
      <material name="orange"><color rgba="0.9 0.5 0.2 1.0"/></material>
    </visual>
  </link>

  <joint name="toe_contact_fixed" type="fixed">
    <parent link="foot_link"/>
    <child link="toe_contact"/>
    <!-- toe at x=+L/2, sole at z=-0.03
    actually not really because foot isnt symmetric -->
    <origin xyz="0.16 0 -0.03" rpy="0 0 0"/>
  </joint>

    
</robot>

